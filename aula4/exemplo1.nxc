#define NEAR 22

    task main(){
        SetSensorLowspeed(IN_4);
        while(true){
            while(SensorUS(IN_4) > NEAR){
                OnFwd(OUT_AC, 50);
            }
            //Off(OUT_AC);
            while(SensorUS(IN_4) < NEAR){
                Off(OUT_A);
                OnRev(OUT_C, 25);
                Wait(300);
            }
        }
    }
